<Window x:Class="LightCopyTranslator.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="设置"
        Width="720"
        Height="420"
        MinWidth="640"
        MinHeight="360"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False"
        WindowStyle="ToolWindow">
    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="ModelsGrid"
                  Grid.Row="0"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  SelectionMode="Extended"
                  HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="启用" Width="60" Binding="{Binding Enabled}"/>
                <DataGridTextColumn Header="名称" Width="120" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="ApiKey" Width="160" Binding="{Binding ApiKey}"/>
                <DataGridTextColumn Header="Model" Width="220" Binding="{Binding Model}"/>
                <DataGridTextColumn Header="BaseUrl" Width="220" Binding="{Binding BaseUrl}"/>
            </DataGrid.Columns>
        </DataGrid>

        <DockPanel Grid.Row="1" Margin="0,10,0,0" LastChildFill="True">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                <Button Content="添加" Width="70" Margin="0,0,8,0" Click="AddModel_Click"/>
                <Button Content="删除" Width="70" Click="RemoveModel_Click"/>
            </StackPanel>
            <TextBlock Text="apiKey 为空则读取 OPENROUTER_API_KEY"
                       VerticalAlignment="Center"
                       Foreground="#6B7280"
                       Margin="12,0"/>
            <CheckBox x:Name="ShowSourcePanelCheckBox" Content="显示原文栏" VerticalAlignment="Center" DockPanel.Dock="Right"/>
        </DockPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="取消" Width="80" Margin="0,0,8,0" Click="Cancel_Click"/>
            <Button Content="保存" Width="80" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
