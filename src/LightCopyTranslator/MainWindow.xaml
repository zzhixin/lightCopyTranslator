<Window x:Class="LightCopyTranslator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Light Copy Translator"
        Width="860"
        Height="360"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        Background="#F6F7F8"
        Closing="Window_Closing"
        Deactivated="Window_Deactivated"
        PreviewKeyDown="Window_PreviewKeyDown">
    <Grid x:Name="RootGrid" Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SourceColumn" Width="0.45*"/>
            <ColumnDefinition x:Name="ResultColumn" Width="0.55*"/>
        </Grid.ColumnDefinitions>

        <Border x:Name="SourcePanel" Grid.Column="0" Background="White" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="8" Padding="12" Margin="0,0,8,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock Text="{Binding SourceText}" TextWrapping="Wrap" FontSize="14" Foreground="#111827"/>
            </ScrollViewer>
        </Border>

        <Border x:Name="ResultPanel" Grid.Column="1" Background="Transparent" CornerRadius="8" Margin="8,0,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Cards}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="8" Padding="12" Margin="0,0,0,10">
                                <StackPanel>
                                    <DockPanel LastChildFill="False">
                                        <TextBlock Text="{Binding SourceName}" FontSize="13" FontWeight="SemiBold" Foreground="#374151" DockPanel.Dock="Left" VerticalAlignment="Center"/>
                                        <Button Content="复制" Padding="8,2" Click="CopyTranslation_Click" DockPanel.Dock="Right"/>
                                    </DockPanel>
                                    <TextBlock Text="{Binding DisplayText}" TextWrapping="Wrap" FontSize="14" Foreground="#111827" Margin="0,6,0,0"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
